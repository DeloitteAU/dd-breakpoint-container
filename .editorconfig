# editorconfig.org
# https://github.com/sindresorhus/editorconfig-sublime

root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = tab

[package.json]
indent_style = space
indent_size = 2
