{
  "name": "dd-breakpoint-container",
  "version": "0.5.7",
  "description": "Flexible container queries for responsive design in React and SCSS.",
  "main": "./lib/index.js",
  "author": "Deloitte Digital Australia (http://deloittedigital.com.au)",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://hub.deloittedigital.com.au/stash/projects/FED/repos/dd-breakpoint-container/"
  },
  "homepage": "https://hub.deloittedigital.com.au/stash/projects/FED/repos/dd-breakpoint-container/browse/README.md",
  "scripts": {
    "doctoc": "doctoc README.md --title '## Index' --maxlevel 4 --bitbucket",
    "start": "npm-watch",
    "build": "run-s --silent build:*",
    "build:pre": "run-s --silent && node ./scripts/text/logo.js",
    "build:sass": "node-sass ./src/scss --output ./src/css",
    "build:lib": "babel ./src --out-dir lib --source-maps inline --copy-files && rm -rf ./lib/scss",
    "build:dev": "cross-env NODE_ENV=development && rollup --config ./rollup.dev.js",
    "build:prod": "cross-env NODE_ENV=production && rollup --config ./rollup.prod.js",
    "build:post": "node ./scripts/buildMixins.js && node ./scripts/text/build-complete.js",
    "prettier": "prettier",
    "lint": "run-s --silent lint:*",
    "lint:js": "eslint ./src/**/*.js",
    "lint:css": "stylelint ./src/**/*.scss ./src/**/*.css",
    "prepublishOnly": "run-s --silent lint build"
  },
  "watch": {
    "build:sass": {
      "patterns": [
        "src/scss"
      ],
      "extensions": "scss",
      "runOnChangeOnly": true
    },
    "build:lib": {
      "patterns": [
        "src"
      ],
      "extensions": "js,scss",
      "runOnChangeOnly": true,
      "delay": 2000
    }
  },
  "dependencies": {
    "core-js": "^3.1.2",
    "react-resize-detector": "^3.4.0"
  },
  "peerDependencies": {
    "classnames": "^2.2.5",
    "react": "^16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@deloitte-digital-au/babel-preset-app-react": "^1.5.0",
    "@deloitte-digital-au/eslint-config-react": "^3.4.0",
    "@deloitte-digital-au/stylelint-config": "^1.1.0",
    "autoprefixer": "^9.5.1",
    "babel-eslint": "^8.2.3",
    "colors": "^1.3.3",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsdoc": "^7.0.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "postcss-preset-env": "^6.6.0",
    "prettier": "^1.17.1",
    "rollup": "^1.12.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-babel-minify": "^7.0.0",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-delete": "^0.2.2",
    "rollup-plugin-node-resolve": "^4.2.4",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-size-snapshot": "^0.8.0",
    "rollup-plugin-visualizer": "^0.9.2",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-prettier": "^1.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "src/**/*.{scss,css}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "files": [
    "index.d.ts",
    "lib/",
    "dist/",
    "LICENCE",
    "CHANGELOG.md",
    "README.md"
  ],
  "keywords": [
    "container-query",
    "element-query",
    "breakpoint",
    "responsive",
    "reactjs",
    "react",
    "react-component"
  ],
  "engines": {
    "node": ">=8.5.0"
  }
}
