{
  "name": "dd-breakpoint-container",
  "version": "0.4.1",
  "description": "Flexible container queries for responsive design in React and SCSS.",
  "main": "./lib/index.js",
  "author": "Deloitte Digital Australia (http://deloittedigital.com.au)",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://hub.deloittedigital.com.au/stash/projects/FED/repos/dd-breakpoint-container/"
  },
  "homepage": "https://hub.deloittedigital.com.au/stash/projects/FED/repos/dd-breakpoint-container/browse/README.md",
  "scripts": {
    "doctoc": "doctoc README.md --title '## Index' --maxlevel 4 --bitbucket",
    "start": "npm-watch",
    "build": "run-s --silent build:*",
    "build:pre": "run-s --silent lint && node ./config/scripts/text/logo.js",
    "build:sass": "node-sass ./src/scss --output ./src/css",
    "build:lib": "babel ./src --out-dir lib --source-maps inline --copy-files && rm -rf ./lib/scss",
    "build:dev": "cross-env NODE_ENV=development && rollup --config ./config/rollup.dev.js",
    "build:prod": "cross-env NODE_ENV=production && rollup --config ./config/rollup.prod.js",
    "build:post": "node ./config/scripts/buildMixins.js && node ./config/scripts/text/build-complete.js",
    "lint": "run-s --silent lint:*",
    "lint:js": "eslint ./src --ext .js --config ./config/.eslintrc.js --ignore-path ./config/.eslintignore",
    "lint:css": "stylelint \"./src/**/*.scss\" --config ./config/.stylelintrc",
    "prepublishOnly": "run-s --silent lint build"
  },
  "watch": {
    "build:sass": {
      "patterns": [
        "src/scss"
      ],
      "extensions": "scss",
      "runOnChangeOnly": true
    },
    "build:lib": {
      "patterns": [
        "src"
      ],
      "extensions": "js,scss",
      "runOnChangeOnly": true,
      "delay": 2000
    }
  },
  "dependencies": {
    "react-resize-detector": "^3.4.0"
  },
  "peerDependencies": {
    "classnames": "^2.2.5",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@deloitte-digital-au/babel-preset-app-react": "^1.5.0",
    "@deloitte-digital-au/eslint-config": "^3.4.0",
    "@deloitte-digital-au/stylelint-config": "^1.1.0",
    "autoprefixer": "^9.4.8",
    "babel-eslint": "^8.2.3",
    "colors": "^1.3.3",
    "cross-env": "^5.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.14.1",
    "eslint-plugin-react": "^7.9.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "postcss-preset-env": "^6.5.0",
    "rollup": "^1.2.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-babel-minify": "^7.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-delete": "^0.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-progress": "^1.0.0",
    "rollup-plugin-size-snapshot": "^0.8.0",
    "rollup-plugin-visualizer": "^0.9.2"
  },
  "files": [
    "lib/",
    "dist/",
    "LICENCE",
    "CHANGELOG.md",
    "README.md"
  ],
  "keywords": [
    "container-query",
    "element-query",
    "breakpoint",
    "responsive",
    "reactjs",
    "react",
    "react-component"
  ],
  "engines": {
    "node": ">=8.5.0"
  }
}
